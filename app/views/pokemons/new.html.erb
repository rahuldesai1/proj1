<% if @new_pokemon and @new_pokemon.errors.any? %>
	<% @pokemon.errors.each do |attribute, message| %>
		<% message %>
	<% end %>
<% end %>
<%= simple_form_for Pokemon.new, url: create_poke_path, method: :post do |f| %>
  <%= f.input :name %>
  <%= f.collection_radio_buttons(
    :ndex, (1..20).map {|ndex| [ndex, ndex]}, :first, :last
  	) do |b| %>
		<div class="pokemon-choice-container">
			<%= b.label { image_tag("pokemon/#{b.text}.png") + b.radio_button } %>
	  	</div>
	<% end %>
	<br>
  <%= f.button :submit, class: "create-pokemon-btn" %>
<% end %>
